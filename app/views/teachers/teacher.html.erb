<div class = "well">
  <div class="row">
    <div class="col-sm-10">
		<blockquote class="blockquote">
			<h4>PERSONAL DETAIL</h4>
			<p> NAME:-<%=@teacher.teacher_name%></p>
			<p> MOBILE NUMBER:-<%=@teacher.mobile_number%></p>
			<p> DATE OF BIRTH:-<%=@teacher.birth_date%></p>
			<p> MARITAL STATUS:-<%=@teacher.marital_status%></p>
			<h4>ADDRESS</h4>
			<h4>QUALIFICATION</h4>
			<footer><%=User.find(@teacher.user_id).email%></footer>
		</blockquote>
   	</div>
    <div class="col-sm-2">
        <h4 class="text-center">IMAGE</h4>
        <%if @image%>
          <div class="thumbnail"><%=image_tag(@image.image_url.to_s,:class=> "img-circle")%></div>
          <%end%>
    </div>
  </div>      
</div>

      
