
	<div class="panel panel-default">
  		<div class="panel-heading">
  				Enter Question 
  		</div> 
  		<div class="panel-body">
		<%if flash%>
   			<%=render "shared/flash"%>
		<%end%>
		
		<%if @error%>
		<div class="alert alert-warning">
    		<%= render"shared/error"%>
		</div>
		<%end%>
		
		<%if @question%>
			<%= form_for @question, :url=>{:controller=>"questtions",:action=>"create"} do |f|%>
				
<form >
	<div class="form-group row">
        <%=f.hidden_field :page_id,:value=>@page.id,class: "form-control"%>
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >QUESTION NUMBER:</label>
    	<div class="col-sm-4">
         	<%=f.number_field :question_number,class: "form-control"%>    		
    	</div>
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >QUESTION:</label>
    	<div class="col-sm-4">
         	<%=f.text_area :content,class: "form-control"%>    		
    	</div>
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >TYPE:</label>
    	<div class="col-sm-4">
      <%= f.text_field :question_type,:value=>"subjective",readonly: true %>
          		
    	</div>
    </div>

    <div class="form-group row">
    	<label class="control-label col-sm-2" >IMAGE(optional):</label>
    	<div class="col-sm-4">
         	<%=f.select("image_id",options_for_select(Image.all.collect{|c| [c.description,c.id]}))%>    		
    	</div>
    </div>


    <div class="form-group row">
    	<div class="col-sm-offset-2 col-sm-10">
 	    	<div class="btn-group ">
    			<button type="submit" class="btn btn-primary">Submit</button>
    			<button type="reset" class="btn btn-primary">Reset</button>
			    
			</div>
		</div>
	</div>
</form>
    		<%end%>
		<%end%>
        </div>
  	</div>
