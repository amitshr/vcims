

  <div class="well">
  <h2>Users</h2>
  <p>This table conatines the basic detail about user:</p>
  <p>Links to destroy or edit details for user are given at end of each row :</p>            
  <p>Use delete button with caution once triggered can not recover the details again:</p>
      <%if flash%>
          <%=render "shared/flash"%>
      <%end%>
    
      <%if @error%>
        <div class="alert alert-warning">
            <%= render"shared/error"%>
        </div>
      <%end%>
  <table class="table table-condensed">
    <thead>
      <tr>
       <th>CATEGORY</th>
        <th>EMAIL</th>
        <th>VERIFY</th>
        <th>STATUS</th>
         <th>EDIT</th>
          <th>DELETE</th>
      </tr>
    </thead>
    <tbody>
    <%if @user%>
    <% @user.each do |u|%>
      <tr>
        <td><%=Category.find(u.category_id).category_name%></td>
        <td><%=u.email%></td>
        <td><%=u.email_verification%></td>
        <td><%=u.status%></td>
        <td><%=link_to("edit",:controller=>"users",:action=>"edit",:id=>u.id)%></td>
        <td><%=link_to("delete",:controller=>"users",:action=>"delete",:id=>u.id)%></td>
        <td><%=link_to("address",:controller=>"addresses",:action=>"show",:id=>u.id)%></td>
        <td><%=link_to("insert address",:controller=>"addresses",:action=>"new",:id=>u.id)%></td>
      </tr>
     <%end%>
     <%end%>       
    </tbody>
  </table>
  </div>
