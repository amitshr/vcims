
	<div class="panel panel-default">
  		<div class="panel-heading">
  		ENTER CHAPTER DETAIL 
  		</div> 
  		<div class="panel-body">
		<%if flash%>
   			<%=render "shared/flash"%>
		<%end%>
		
		<%if @error%>
		<div class="alert alert-warning">
    		<%= render"shared/error"%>
		</div>
		<%end%>
		
		<%if @chapter%>
			<%= form_for @chapter, :url=>{:controller=>"chapters",:action=>"create"} do |f|%>
				
<form >
	<div class="form-group row">
    	<div class="col-sm-4">
          <%=f.hidden_field :book_id,:value=>@book.id,:readonly => true%>
    	</div>

      
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >NUMBER:</label>
      <div class="col-sm-2">
          <%=f.number_field :chapter_number,:min => 1,:max=>20,class: "form-control"%>        
      </div>

      <label class="control-label col-sm-2" >HEADING:</label>
    	<div class="col-sm-6">
         	<%=f.text_field :title,class: "form-control"%>    		
    	</div>
    	
    </div>
    <div class="form-group row">
    <label class="control-label col-sm-2" >INTRODUCTION:</label>
      <div class="col-sm-10">
          <%=f.text_area :summary,class: "form-control", rows: 5%>       
      </div>
    </div>
    <div class="form-group row">
    	<div class="col-sm-offset-2 col-sm-10">
 	    	<div class="btn-group ">
    			<button type="submit" class="btn btn-primary">Submit</button>
    			<button type="reset" class="btn btn-primary">Reset</button>
			    
			</div>
		</div>
	</div>
</form>
    		<%end%>
		<%end%>
        </div>
  	</div>