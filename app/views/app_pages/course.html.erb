<div id="courses" class="container-fluid">
  <div class="text-center">
    <h2>COURSES</h2>
    <h4>Choose any one and signup</h4>
  </div>
  <div class="row ">
    <%Course.all.each do |c|%>
    <div class="col-sm-4 col-xs-12">
      <div class="panel panel-default text-center">
        <div class="panel-heading">
          <h1><%=c.course_name%></h1>
        </div>
        <div class="panel-body">
          <p><strong>Board:-</strong> <%=Board.find(c.board_id).short_name%></p>
          <p><strong>Subject:-</strong> <%=Subject.find(c.subject_id).title%></p>
          <p><strong>Class:-</strong> <%=Klass.find(c.klass_id).title%></p>
          <p><strong>Description:-</strong><%=c.description%></p>
        </div>
        <div class="panel-footer">
          <h3><%=c.fee%></h3>
          <h4>per month</h4>
          <%=link_to("Sign Up",:controller=>"app_pages",:action=>"signup")%>
        </div>
      </div>      
    </div>  
   <%end%>    
          
  </div>
</div>