<div class="panel panel-default">
  		<div class="panel-heading">
  				SIGN UP
  		</div> 
  		<div class="panel-body">
			<%if flash%>
   				<%=render "shared/flash"%>
			<%end%>
		
			<%if @error%>
				<div class="alert alert-warning">
    				<%= render"shared/error"%>
				</div>
			<%end%>
		<div class="row">
    <div class= "col-sm-6 col-sx-12">
		<%if @user%>
			<%= form_for @user, :url=>{:controller=>"users",:action=>"create"} do |f|%>
		<form >
        <%=f.hidden_field :category_id,:value=>@id %>
        <%=f.hidden_field :user_name,:value=>"vidyapeethclasses"%>
  			<%=f.hidden_field :email_verification,:value=>1%> 
        <%=f.hidden_field :status,:value=>1%>   
		<div class="form-group row">
             <label class="control-label col-sm-2" >EMAIL:-</label>	 				
              <div class="col-sm-10">
             	       <%=f.email_field :email,class: "form-control"%>
    	</div>
      </div>

    	<div class="form-group row">
    			<label class="control-label col-sm-2" >PASSWORD:-</label>
			     <div class="col-sm-10">
              <%=f.password_field :password,class: "form-control"%>
        	 </div>
      </div>
      <div class="form-group row">	
        <label class="control-label col-sm-2" >CONFIRM:-</label>
    		<div class="col-sm-10">
				<%=f.password_field :password_2,class: "form-control"%>
  			</div>
  		</div>	
    	<div class="form-group row">
    		<div class="col-sm-offset-2 col-sm-10">
 	    		<div class="btn-group ">
    				<button type="submit" class="btn btn-primary">Submit</button>
				</div>
			 </div>
		  </div>
</form>
</div>
</div>
    		<%end%>
		<%end%>
        </div>
  	</div>
