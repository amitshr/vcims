<div class="container">

	<div class="panel panel-default">
  		<div class="panel-heading">
  				Enter Address Detail 
  		</div> 
  		<div class="panel-body">
		<%if flash%>
   			<%=render "shared/flash"%>
		<%end%>
		
		<%if @error%>
		<div class="alert alert-warning">
    		<%= render"shared/error"%>
		</div>
		<%end%>
		
		<%if @room%>
			<%= form_for @room, :url=>{:controller=>"rooms",:action=>"update"} do |f|%>
				
<form >
    <%=f.hidden_field :id,:value=>@room.id,class: "form-control"%>
	<div class="form-group row">
    	<label class="control-label col-sm-2" >center:</label>
    	<div class="col-sm-4">
         	<%=f.select("center_id",options_for_select(Center.all.collect{|c| [c.center_name,c.id]}))%>    		
    	</div>
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >Number of Seats:</label>
    	<div class="col-sm-4">
         	<%=f.number_field :seats,:value=>@room.seats,class: "form-control"%>    		
    	</div>
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >Room Number:</label>
    	<div class="col-sm-4">
         	<%=f.number_field :room_number,:value=>@room.room_number,class: "form-control"%>    		
    	</div>
    </div>

    <div class="form-group row">
    	<div class="col-sm-offset-2 col-sm-10">
 	    	<div class="btn-group ">
    			<button type="submit" class="btn btn-primary">Submit</button>
    			<button type="reset" class="btn btn-primary">Reset</button>
			    
			</div>
		</div>
	</div>
</form>




    		<%end%>
		<%end%>
        </div>
  	</div>
 </div>