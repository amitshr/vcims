
	<div class="panel panel-default">
  		<div class="panel-heading">
  		New Post 
  		</div> 
  		<div class="panel-body">
		<%if flash%>
   			<%=render "shared/flash"%>
		<%end%>
		
		<%if @error%>
		<div class="alert alert-warning">
    		<%= render"shared/error"%>
		</div>
		<%end%>
		
		<%if @post%>
			<%= form_for @post, :url=>{:controller=>"posts",:action=>"create"} do |f|%>
				

<form >
    <div class="form-group row">
      
          <%=f.hidden_field :user_id,:value => @user_id%>        
    
    </div>
	  <div class="form-group row">
    	
          <%=f.hidden_field :blog_id,:value => @id%>     
    	
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >Image:</label>
    	<div class="col-sm-4">
      <%=f.select("image_id",options_for_select(Image.all.collect{|b| [b.description,b.id]}))%>     		
    	</div>
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >TEXT:</label>
    	<div class="col-sm-10">
         	<%=f.text_area :content,class: "form-control",:rows => 15%>    		
    	</div>
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >Status:</label>
    	<div class="col-sm-4">
        <%=f.radio_button :status,'public'%>Public
            <%=f.radio_button :status,'private',:checked => true%>Private     		
    	</div>
    </div>
    <div class="form-group row">
    	<div class="col-sm-offset-2 col-sm-10">
 	    	<div class="btn-group ">
    			<button type="submit" class="btn btn-primary">Submit</button>
    			<button type="reset" class="btn btn-primary">Reset</button>
			    
			</div>
		</div>
	</div>
</form>
    		<%end%>
		<%end%>
        </div>
  	</div>
