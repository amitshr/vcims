
	<div class="panel panel-default">
  		<div class="panel-heading">
  				Enter Blogs Detail 
  		</div> 
  		<div class="panel-body">
		<%if flash%>
   			<%=render "shared/flash"%>
		<%end%>
		
		<%if @error%>
		<div class="alert alert-warning">
    		<%= render"shared/error"%>
		</div>
		<%end%>
		
		<%if @blog%>
			<%= form_for @blog, :url=>{:controller=>"blogs",:action=>"update"} do |f|%>
				
	<form >
	<div class="form-group row">
        <label class="control-label col-sm-2" >Id-</label>
        <div class="col-sm-10">
            <div class ="input-group"> 
            <span class="input-group-addon">id</span>
                <%=f.text_field :id,:value=>@blog.id,class: "form-control"%>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-2" >Blog Title:-</label>
        <div class="col-sm-10">
            <div class ="input-group"> 

                <%=f.text_field :title,class: "form-control"%>
            </div>
        </div>
    </div>
	<div class="form-group row">
    	<label class="control-label col-sm-2" >About Blog:</label>
    	<div class="col-sm-10">
    		<div class ="input-group">
         		<%=f.text_area :description,class: "form-control"%>
    		</div>
    	</div>
    </div>
     <div class="form-group row">
    	<div class="col-sm-offset-2 col-sm-10">
 	    	<div class="btn-group ">
    			<button type="submit" class="btn btn-primary">Submit</button>
    			<button type="reset" class="btn btn-primary">Reset</button>
			</div>
		</div>
	</div>
</form>
  

    		<%end%>
		<%end%>
        </div>
  	</div>
