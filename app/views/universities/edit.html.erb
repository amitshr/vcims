<div class="container">

	<div class="panel panel-default">
  		<div class="panel-heading">
  		Edit University Detail
  		</div> 
  		<div class="panel-body">
		<%if flash%>
   			<%=render "shared/flash"%>
		<%end%>
		
		<%if @error%>
		<div class="alert alert-warning">
    		<%= render"shared/error"%>
		</div>
		<%end%>
		
		<%if @university%>
			<%= form_for @university, :url=>{:controller=>"universities",:action=>"update"} do |f|%>
	<form >
	   <%=hidden_field :id,:value=>@university.id%>
       <div class="form-group row">
        <label class="control-label col-sm-2" >Full Name:</label>
        <div class="col-sm-4">
            <%=f.text_field :full_name,:value=>@university.full_name,class: "form-control"%>          
        </div>
    </div>
    
    <div class="form-group row">
        <label class="control-label col-sm-2" >Short Name:</label>
        <div class="col-sm-4">
            <%=f.text_field :short_name,:value=>@university.short_name,class: "form-control"%>          
        </div>
    </div>


    <div class="form-group row">
        <label class="control-label col-sm-2" >State:</label>
        <div class="col-sm-4">
            <%=f.text_field :state,:value=>@university.state,class: "form-control"%>          
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="btn-group ">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-primary">Reset</button>
                
            </div>
        </div>
    </div>
</form>

    		<%end%>
		<%end%>
        </div>
  	</div>
 </div>