
	<div class="panel panel-default">
  		<div class="panel-heading">
  				Enter Book Detail 
  		</div> 
  		<div class="panel-body">
		<%if flash%>
   			<%=render "shared/flash"%>
		<%end%>
		
		<%if @error%>
		<div class="alert alert-warning">
    		<%= render"shared/error"%>
		</div>
		<%end%>
		
		<%if @book%>
			<%= form_for @book, :url=>{:controller=>"books",:action=>"create"} do |f|%>
				

<form >
    <div class="form-group row">
        <label class="control-label col-sm-2" >Book Title -</label>
        <div class="col-sm-10">
            <div class ="input-group"> 
            <span class="input-group-addon">title:</span>
                <%=f.text_field :title,class: "form-control"%>
            </div>
        </div>
    </div>
	<div class="form-group row">
    	<label class="control-label col-sm-2" >Summary Of Book:</label>
    	<div class="col-sm-10">
         		<%=f.text_area :summary,class: "form-control"%>
    
    	</div>
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >Book ISBN Number:</label>
    	<div class="col-sm-10">
    		<div class ="input-group"> 
        	<span class="input-group-addon">isbn(optional)</span>
         		<%=f.text_field :isbn,class: "form-control"%>
    		</div>
    	</div>
    </div>
     <div class="form-group row">
    	<label class="control-label col-sm-2" >Author :</label>
    	<div class="col-sm-10">
    		<div class ="input-group"> 
        	<span class="input-group-addon">name:</span>
         		<%=f.text_field :author,class: "form-control"%>
    		</div>
    	</div>
    </div>
     <div class="form-group row">
    	<label class="control-label col-sm-2" >Select Subject:</label>
    	<div class="col-sm-10">
    		<div class ="input-group"> 
        	
         		<%=f.select(:subject_id, options_for_select(Subject.all.collect{|u| [u.title,u.id]} )) %>
    		</div>
    	</div>
    </div>
     <div class="form-group row">
    	<label class="control-label col-sm-2" >Select Class :</label>
    	<div class="col-sm-10">
    		<div class ="input-group"> 
        	<%=f.select(:klass_id, options_for_select(Klass.all.collect{|u| [u.title,u.id]} )) %>
    		</div>
    	</div>
    </div>
     <div class="form-group row">
    	<label class="control-label col-sm-2" >Select Board :</label>
    	<div class="col-sm-10">
    		<div class ="input-group"> 
        	<%=f.select(:board_id, options_for_select(Board.all.collect{|u| [u.short_name,u.id]})) %> 
    		</div>
    	</div>
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >Select Title Image :</label>
    	<div class="col-sm-10">
    		<div class ="input-group"> 
         		<%=f.select(:image_id, options_for_select(Image.all.collect{|u| [u.description,u.id]})) %> 
    		</div>
    	</div>
    </div>
     <div class="form-group row">
    	<div class="col-sm-offset-2 col-sm-10">
 	    	<div class="btn-group ">
    			<button type="submit" class="btn btn-primary">Submit</button>
    			<button type="reset" class="btn btn-primary">Reset</button>
			</div>
		</div>
	</div>
    		<%end%>
		<%end%>
        </div>
  	</div>
