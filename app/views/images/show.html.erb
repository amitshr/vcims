

  <div class="well">
  <h2>List Of All images</h2>
  <p>Links to destroy or edit details for user are given at end of each row :</p>            
  <p>Use delete button with caution once triggered can not recover the details again:</p>
  <%if @error%>
    <div class="alert alert-warning">
        <%= render"shared/error"%>
    </div>
   <%end%>
   <%if @image%>
    <% @image.each do |u|%>
       <h4><p><%=u.description%></p></h4>
      <blockquote class="blockquote">
      <div class ="row">
        <div class="col-sm-2 col-xs-12 thumbnail">
    
          <%=image_tag(u.image_url.to_s,:class=> "img-rounded")%>
          
         
        </div>
        <div class="col-sm-10 col-xs-12">
         
        </div> 
      </div>
           
        
      <footer>size<%=u.size%></footer>
      <%=link_to("edit",:controller=>"images",:action=>"edit",:id=>u.id)%>
      <%=link_to("delete",:controller=>"images",:action=>"delete",:id=>u.id)%>
      </blockquote>

     <%end%>
     <%end%>

  </div>
