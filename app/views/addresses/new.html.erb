	<div class="panel panel-default">
  	<div class="panel-heading">
  				Enter Address Detail 
  	</div> 
  	<div class="panel-body">
		  <%if flash%>
   			<%=render "shared/flash"%>
		  <%end%>
		
		  <%if @error%>
		    <div class="alert alert-warning">
    		  <%= render"shared/error"%>
		    </div>
		  <%end%>
		
		<%if @address%>
		<%= form_for @address, :url=>{:controller=>"addresses",:action=>"create"} do |f|%>
		<form>
          <%=f.hidden_field :user_id,:value=>@user_id%>   
          <div class="form-group row">
    	     <label class="control-label col-sm-2" >Address:</label>
    	       <div class="col-sm-10">
    	       	<div class ="input-group"> 
        	     <span class="input-group-addon"> 	line 1</span>
         		     <%=f.text_field :line1,class: "form-control"%>
    		    </div>
    	     </div>
        </div>
        <div class="form-group row">
    	     <label class="control-label col-sm-2" ></label>
    	       <div class="col-sm-10">
    	         <div class ="input-group"> 
        	       <span class="input-group-addon"> 	line 2 </span>
	 			             <%=f.text_field :line2,class: "form-control"%>
    	         </div>
    	       </div>
        </div>

        <div class="form-group row">
    	     <label class="control-label col-sm-2" >Town:</label>
    	       <div class="col-sm-4">
			         <%=f.text_field :town,class: "form-control"%>
            </div>

    	     <label class="control-label col-sm-2" >District:</label>
    	       <div class="col-sm-4">
			         <%=f.text_field :district,class: "form-control"%>
  		      </div>
  	     </div>
      	<div class="form-group row">
    	     <label class="control-label col-sm-2" >State:</label>
    	       <div class="col-sm-4">
			         <%=f.text_field :state,class: "form-control"%>
  		      </div>
  
      	   <label class="control-label col-sm-2" >City:</label>
    	       <div class="col-sm-4">
			         <%=f.text_field :city,class: "form-control"%>    
		        </div>
	       </div>
 	        <div class="form-group row">
    	       <label class="control-label col-sm-2" >Country:</label>
    	         <div class="col-sm-4">
			           <%=f.text_field :country,:value => "India",class: "form-control"%>
		          </div>

            	<label class="control-label col-sm-2" >Pin Code:</label>
    	         <div class="col-sm-4">
			           <%=f.text_field :pincode,class: "form-control"%>    
		          </div>
	       </div>
          <div class="form-group row">
    	       <label class="control-label col-sm-2" >Contact:</label>
    	         <div class="col-sm-4">
 			          <%=f.text_field :landline_number,class: "form-control"%>
  		        </div>    
	       </div>

          <div class="form-group row">
    	       <div class="col-sm-offset-2 col-sm-10">
 	    	       <div class="btn-group ">
    			       <button type="submit" class="btn btn-primary">Submit</button>
    		  	     <button type="reset" class="btn btn-primary">Reset</button>
			         </div>
		        </div>
	         </div>
    </form>
    		<%end%>
		<%end%>
    </div>
</div>