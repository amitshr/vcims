	<div class="panel panel-default">
  		<div class="panel-heading">
  				Edit Detail 
  		</div> 
  		<div class="panel-body">
		<%if flash%>
   			<%=render "shared/flash"%>
		<%end%>
		
		<%if @error%>
		<div class="alert alert-warning">
    		<%= render"shared/error"%>
		</div>
		<%end%>
		
		<%if @answer%>
			<%= form_for @answer, :url=>{:controller=>"answers",:action=>"update"} do |f|%>
		 
				<form >
        <%=f.hidden_field :id,:value=>@answer.id%>
    				<div class="form-group row">
        			<label class="control-label col-sm-2" >Question:-</label>
        				<div class="col-sm-10">
           	
                  <%=f.select("question_id",options_for_select(Question.all.collect{|u| [u.content,u.id]}))%>
                
                
           					 
       					 </div>
   			 		</div>
					<div class="form-group row">
    					<label class="control-label col-sm-2" >Answer:</label>
    						<div class="col-sm-10">
    							
         							<%=f.text_area :content,class: "form-control",rows: 10%>
    						
    						</div>
    			</div>
      <div class="form-group row">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="btn-group ">
          <button type="submit" class="btn btn-primary">Submit</button>
          <button type="reset" class="btn btn-primary">Reset</button>
      </div>
    </div>
  </div>
    				
				</form>
    		<%end%>
		<%end%>
        </div>
  	</div>

