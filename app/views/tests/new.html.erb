
    <div class="panel panel-default">
        <div class="panel-heading">
                Test 
        </div> 
        <div class="panel-body">
            <%if flash%>
                <%=render "shared/flash"%>
            <%end%>
            <%if @error%>
                <div class="alert alert-warning">
                    <%= render"shared/error"%>
                </div>
            <%end%>
             select book<br>
                        select chapter<br> 
                        select page <br>
                        select questions<br>
        <%if @test%>
            <%= form_for @test, :url=>{:controller=>"tests",:action=>"create"} do |f|%>
            <form >
                <div class="form-group row">
                    <label class="control-label col-sm-2" >Batch:</label>
                        <div class="col-sm-4">
                        <%=f.select("course_id",options_for_select(Course.all.collect{|b| [b.course_name,b.id]}))%>          
                        </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-sm-2" >Test Code:</label>
                        <div class="col-sm-4">
                        <%=f.text_field :test_code,class: "form-control"%>          
                        </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-sm-2" >Note:</label>
                        <div class="col-sm-4">
                        <%=f.text_field :note,class: "form-control"%>          
                        </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-sm-2" >Type:</label>
                        <div class="col-sm-4">
                            <select id="test[test_type]"  name=="test[test_type]">
                                <option value="numerical">Numerical</option>
                                <option value="subjective">Subjective</option>
                                <option value="objective">Objective</option>
                            </select>
                        </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-sm-2" >Content:</label>
                        <div class="col-sm-8">
                        <%=f.text_area :content,class: "form-control",rows: 20%> </div>
                        <div class="col-sm-2">

                            <!-- Trigger the modal with a button -->    
                        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Insert Question</button>
                        </div>  
                            <!-- end -->
                </div>
                <div class="form-group row">
                    <label class="control-label col-sm-2" >Maximum Marks:</label>
                        <div class="col-sm-4">
                        <%=f.text_field :marks,class: "form-control"%>         
                        </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-sm-2" >Time Duration:</label>
                        <div class="col-sm-4">
                        <%=f.text_field :time_duration,class: "form-control"%>  </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="btn-group ">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="reset" class="btn btn-primary">Reset</button>
                        </div>
                    </div>
                </div>
            </form>
            <%end%>
            <%end%>
        </div>
    </div>



    <!-- Modal -->
                <div id="myModal" class="modal fade" role="dialog">
                    <div class="modal-dialog modal-lg">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Questions</h4>
                        </div>
                    <div class="modal-body">

                        <%@question.each do |u|%>
                            Page Title:-<%=Page.find(u.page_id).title%><br>
                            Questions:-<%=u.content%><br>
                         <%end%>   
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                    </div>
                    </div>
                </div>



