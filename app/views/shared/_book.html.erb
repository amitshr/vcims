

<form >
    <div class="form-group row">
        <label class="control-label col-sm-2" >Book Title -</label>
        <div class="col-sm-10">
            <div class ="input-group"> 
            <span class="input-group-addon">title:</span>
                <%=f.text_field :title,class: "form-control"%>
            </div>
        </div>
    </div>
	<div class="form-group row">
    	<label class="control-label col-sm-2" >Summary Of Book:</label>
    	<div class="col-sm-10">
         		<%=f.text_area :summary,class: "form-control"%>
    
    	</div>
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >Book ISBN Number:</label>
    	<div class="col-sm-10">
    		<div class ="input-group"> 
        	<span class="input-group-addon">isbn(optional)</span>
         		<%=f.text_field :isbn,class: "form-control"%>
    		</div>
    	</div>
    </div>
     <div class="form-group row">
    	<label class="control-label col-sm-2" >Author :</label>
    	<div class="col-sm-10">
    		<div class ="input-group"> 
        	<span class="input-group-addon">name:</span>
         		<%=f.text_field :author,class: "form-control"%>
    		</div>
    	</div>
    </div>
     <div class="form-group row">
    	<label class="control-label col-sm-2" >Select Subject:</label>
    	<div class="col-sm-10">
    		<div class ="input-group"> 
        	<span class="input-group-addon">subject:</span>
         		<%=f.text_field :subject_id,class: "form-control"%>
    		</div>
    	</div>
    </div>
     <div class="form-group row">
    	<label class="control-label col-sm-2" >Select Class :</label>
    	<div class="col-sm-10">
    		<div class ="input-group"> 
        	<span class="input-group-addon">class:</span>
         		<%=f.text_field :klass_id,class: "form-control"%>
    		</div>
    	</div>
    </div>
     <div class="form-group row">
    	<label class="control-label col-sm-2" >Select Board :</label>
    	<div class="col-sm-10">
    		<div class ="input-group"> 
        	<span class="input-group-addon">baord:</span>
         		<%=f.text_field :board_id,class: "form-control"%>
    		</div>
    	</div>
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >Select Title Image :</label>
    	<div class="col-sm-10">
    		<div class ="input-group"> 
        	<span class="input-group-addon">image:</span>
         		<%=f.text_field :image_id,class: "form-control"%>
    		</div>
    	</div>
    </div>
     <div class="form-group row">
    	<div class="col-sm-offset-2 col-sm-10">
 	    	<div class="btn-group ">
    			<button type="submit" class="btn btn-primary">Submit</button>
    			<button type="reset" class="btn btn-primary">Reset</button>
			</div>
		</div>
	</div>