<div class="container">

	<div class="panel panel-default">
  		<div class="panel-heading">
  				Enter Board Detail 
  		</div> 
  		<div class="panel-body">
		<%if flash%>
   			<%=render "shared/flash"%>
		<%end%>
		
		<%if @error%>
		<div class="alert alert-warning">
    		<%= render"shared/error"%>
		</div>
		<%end%>
		
		<%if @board%>
			<%= form_for @board, :url=>{:controller=>"boards",:action=>"update"} do |f|%>
				
			<form >
			  <%=f.text_field :id,:value=>@board.id,class: "form-control"%>
   				 <div class="form-group row">
      				  <label class="control-label col-sm-2" >State Of Board: -</label>
        				<div class="col-sm-10">
          				  <div class ="input-group"> 

               				 <%=f.text_field :state,:value=>@board.state,class: "form-control"%>
           					 </div>
       				 </div>
   				 </div>
				<div class="form-group row">
    				<label class="control-label col-sm-2" >Short Name:</label>
    					<div class="col-sm-10">
    						<div class ="input-group"> 
  
         					<%=f.text_field :short_name,:value=>@board.short_name,class: "form-control"%>
    						</div>
    					</div>
   					 </div>
    			<div class="form-group row">
    				<label class="control-label col-sm-2" >Full Name:</label>
    						<div class="col-sm-10">
    					<div class ="input-group"> 
        	
         				<%=f.text_field :full_name,:value=>@board.full_name,class: "form-control"%>
    					</div>
    				</div>
    			</div>
     			<div class="form-group row">
    			<div class="col-sm-offset-2 col-sm-10">
 	    				<div class="btn-group ">
    					<button type="submit" class="btn btn-primary">Submit</button>
    					<button type="reset" class="btn btn-primary">Reset</button>
						</div>
				</div>
			</div>
			</form>
    		<%end%>
		<%end%>
        </div>
  	</div>
 </div>