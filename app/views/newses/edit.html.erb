
	<div class="panel panel-default">
  		<div class="panel-heading">
  		Edit Page 
  		</div> 
  		<div class="panel-body">
		<%if flash%>
   			<%=render "shared/flash"%>
		<%end%>
		
		<%if @error%>
		<div class="alert alert-warning">
    		<%= render"shared/error"%>
		</div>
		<%end%>
		
		<%if @news%>
			<%= form_for @news, :url=>{:controller=>"newses",:action=>"update"} do |f|%>
				
<form >
    <%=hidden_field :id,:value=>@news.id%>
	<div class="form-group row">
    	<label class="control-label col-sm-2" >user:</label>
    	<div class="col-sm-10">
         	<%=f.select("user_id",options_for_select(User.all.collect{|c| [c.email,c.id]}))%>    		
    	</div>
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >Content:</label>
    	<div class="col-sm-10">
         	<%=f.text_area :content,:value=>@news.content,class: "form-control",rows: 10%>    		
    	</div>
    </div>
    

    <div class="form-group row">
    	<label class="control-label col-sm-2" >Image:(optional)</label>
    	<div class="col-sm-4">
         	<%=f.select("image_id",options_for_select(Image.all.collect{|c| [c.description,c.id]}))%>     		
    	</div>
    </div>


    <div class="form-group row">
    	<div class="col-sm-offset-2 col-sm-10">
 	    	<div class="btn-group ">
    			<button type="submit" class="btn btn-primary">Submit</button>
    			<button type="reset" class="btn btn-primary">Reset</button>
			    
			</div>
		</div>
	</div>
</form>
    		<%end%>
		<%end%>
        </div>
  	</div>
