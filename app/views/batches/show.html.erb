

  <div class="well">
  <h2>Batches</h2>
  <p>This table conatines the Batch detail For Student:</p>
  <p>Links to destroy or edit details for user are given at end of each row :</p>            
  <p>Use delete button with caution once triggered can not recover the details again:</p>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Room</th>
        <th>Batch</th>
        <th>Course</th>
        <th>Session</th>
        <th>Seats</th>
        <th>Sarting Date</th>
        <th>Status</th>
         <th>Edit</th>
          <th>Delete</th>
           <th>Check Profile</th>
      </tr>
    </thead>
    <tbody>
    <%if @batch%>
    <% @batch.each do |u|%>
      <tr>
        <td><%=u.room_id%></td>
        <td><%=u.batch_name%></td>
        <td><%=u.course_id%></td>
        <td><%=u.sesion_id%></td>
        <td><%=u.filled_seats%></td>
        <td><%=u.staring_date%></td>
        <td><%=u.status%></td>
        <td><%=link_to("edit",:controller=>"batches",:action=>"edit",:id=>u.id)%></td>
        <td><%=link_to("delete",:controller=>"batches",:action=>"delete",:id=>u.id)%></td>
        <td><%=link_to("profile",:controller=>"batches",:action=>"profile",:id=>u.id)%></td>
      </tr>
     <%end%>
     <%end%>       
    </tbody>
  </table>
  </div>