
	<div class="panel panel-default">
  		<div class="panel-heading">
  				Session 
  		</div> 
  		<div class="panel-body">
		<%if flash%>
   			<%=render "shared/flash"%>
		<%end%>
		
		<%if @error%>
		<div class="alert alert-warning">
    		<%= render"shared/error"%>
		</div>
		<%end%>
		
		<%if @sesion%>
			<%= form_for @sesion, :url=>{:controller=>"sesions",:action=>"update"} do |f|%>
				<form >  
         	 <%=f.text_field :id,:value=>@sesion.id,class: "form-control"%>    
	         <div class="form-group row">
    	         <label class="control-label col-sm-2" >Session Year to Year:</label>
    	             <div class="col-sm-4">
         	          <%=f.text_field :title,:value=>@sesion.title,class: "form-control"%>    		
    	             </div>
             </div>
          <div class="form-group row">
    	           <label class="control-label col-sm-2" >From:</label>
    	               <div class="col-sm-4">
         	          <%=f.date_field :from,:value=> @sesion.from,class: "form-control"%>    		
    	               </div>
          </div>
          <div class="form-group row">
    	         <label class="control-label col-sm-2" >To:</label>
    	           <div class="col-sm-4">
         	        <%=f.date_field :to,:value=> @sesion.to,class: "form-control"%>    		
    	           </div>
          </div>
          <div class="form-group row">
    	     <div class="col-sm-offset-2 col-sm-10">
 	    	         <div class="btn-group ">
    			           <button type="submit" class="btn btn-primary">Submit</button>
    			           <button type="reset" class="btn btn-primary">Reset</button>   
			           </div>
	       	</div>
	       </div>
      </form>
   	<%end%>
		<%end%>
        </div>
  	</div>
