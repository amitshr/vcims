
	<div class="panel panel-default">
  		<div class="panel-heading">
  				Result 
  		</div> 
  		<div class="panel-body">
		<%if flash%>
   			<%=render "shared/flash"%>
		<%end%>
		
		<%if @error%>
		<div class="alert alert-warning">
    		<%= render"shared/error"%>
		</div>
		<%end%>
		
		<%if @result%>
			<%= form_for @result, :url=>{:controller=>"results",:action=>"create"} do |f|%>
				

<form >
	
    	
    <div class="form-group row">
    	<label class="control-label col-sm-2" >Maximum Marks:</label>
    	<div class="col-sm-4">
         	<%=f.select("student_id",options_for_select(Student.all.collect{|s| [s.student_name,s.id]}))%>    		
    	</div>
    </div>
    <div class="form-group row">
      <label class="control-label col-sm-2" >Maximum Marks:</label>
      <div class="col-sm-4">
          <%=f.select("test_id",options_for_select(Test.all.collect{|t| [t.test_code,t.id]}))%>      
      </div>
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >Marks Obtained:</label>
    	<div class="col-sm-4">
         	<%=f.text_field :marks_obtained,class: "form-control"%>    		
    	</div>
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >Remarks:</label>
    	<div class="col-sm-4">
         	<%=f.text_area :remark,class: "form-control"%>    		
    	</div>
    </div>

    <div class="form-group row">
    	<div class="col-sm-offset-2 col-sm-10">
 	    	<div class="btn-group ">
    			<button type="submit" class="btn btn-primary">Submit</button>
    			<button type="reset" class="btn btn-primary">Reset</button>
			    
			</div>
		</div>
	</div>
</form>




    		<%end%>
		<%end%>
        </div>
  	</div>
