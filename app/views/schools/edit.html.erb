<div class="container">

	<div class="panel panel-default">
  		<div class="panel-heading">
  				Enter School Detail 
  		</div> 
  		<div class="panel-body">
		<%if flash%>
   			<%=render "shared/flash"%>
		<%end%>
		
		<%if @error%>
		<div class="alert alert-warning">
    		<%= render"shared/error"%>
		</div>
		<%end%>
		
		<%if @school%>
			<%= form_for @school, :url=>{:controller=>"schools",:action=>"update"} do |f|%>
				
<form >
    <%=f.hidden_field :id,:value=>@school.id,class: "form-control"%>
	<div class="form-group row">
    	<label class="control-label col-sm-2" >Name Of School:</label>
    	<div class="col-sm-4">
         	<%=f.text_field :school_name,:value=>@school.school_name,class: "form-control"%>    		
    	</div>
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >City:</label>
    	<div class="col-sm-4">
         	<%=f.text_field :city,:value=>@school.city,class: "form-control"%>    		
    	</div>
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >State:</label>
    	<div class="col-sm-4">
         	<%=f.text_field :state,:value=>@school.state,class: "form-control"%>    		
    	</div>
    </div>

    <div class="form-group row">
    	<label class="control-label col-sm-2" >Board:</label>
    	<div class="col-sm-4">
         	<%=f.select(:board_id,options_for_select(Board.all.collect{|b| [b.short_name,b.id]}))%>    		
    	</div>
    </div>

    <div class="form-group row">
    	<label class="control-label col-sm-2" >Girls/Boys</label>
    	<div class="col-sm-4">
         	<%=f.text_field :school_type,:value=>@school.school_type,class: "form-control"%>    		
    	</div>
    </div>

    <div class="form-group row">
    	<label class="control-label col-sm-2" >Contact Number:</label>
    	<div class="col-sm-4">
         	<%=f.text_field :contact_number,:value=>@school.contact_number,class: "form-control"%>    		
    	</div>
    </div>

    <div class="form-group row">
    	<div class="col-sm-offset-2 col-sm-10">
 	    	<div class="btn-group ">
    			<button type="submit" class="btn btn-primary">Submit</button>
    			<button type="reset" class="btn btn-primary">Reset</button>
			    
			</div>
		</div>
	</div>
</form>

    		<%end%>
		<%end%>
        </div>
  	</div>
 </div>