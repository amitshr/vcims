
	<div class="panel panel-default">
  		<div class="panel-heading">
  		New Page 
  		</div> 
  		<div class="panel-body">
		<%if flash%>
   			<%=render "shared/flash"%>
		<%end%>
		
		<%if @error%>
		<div class="alert alert-warning">
    		<%= render"shared/error"%>
		</div>
		<%end%>
		
		<%if @page%>
			<%= form_for @page, :url=>{:controller=>"pages",:action=>"create"} do |f|%>
				
<form >
	<div class="form-group row">
    	
         	<%=f.hidden_field :chapter_id,:value=>@chapter.id,class: "form-control"%>  		
   
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >HEADING:</label>
    	<div class="col-sm-4">
         	<%=f.text_field :title,class: "form-control"%>    		
    	</div>
    
    	<label class="control-label col-sm-2" >SUB HEADING:</label>
    	<div class="col-sm-4">
         	<%=f.text_field :sub_title,class: "form-control"%>    		
    	</div>
    </div>
    

    <div class="form-group row">
    	<label class="control-label col-sm-2" >CONTENT:</label>
    	<div class="col-sm-10">
         	<%=f.text_area :content,class: "form-control",rows: 20%>    		
    	</div>
    </div>
    <div class="form-group row">
      <label class="control-label col-sm-2" >NUMBER:</label>
      <div class="col-sm-4">
          <%=f.number_field :page_number,:min => 1,:max=>100,class: "form-control"%>        
      </div>
    </div>
    <div class="form-group row">
    	<label class="control-label col-sm-2" >IMAGE:(optional)</label>
    	<div class="col-sm-4">
         	<%=f.select("image_id",options_for_select(Image.all.collect{|c| [c.description,c.id]}))%>     		
    	</div>
    </div>


    <div class="form-group row">
    	<div class="col-sm-offset-2 col-sm-10">
 	    	<div class="btn-group ">
    			<button type="submit" class="btn btn-primary">Submit</button>
    			<button type="reset" class="btn btn-primary">Reset</button>
			    
			</div>
		</div>
	</div>
</form>
    		<%end%>
		<%end%>
        </div>
  	</div>